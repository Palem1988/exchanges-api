{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "target": "es5",
    "typeRoots" : ["node_modules/@types"],
    "types": [
      "node"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": [
      "es5",
      "es6",
      "es2016",
      "dom"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "**/*test.tsx",
    "dist",
    "node_modules"
  ]
}
